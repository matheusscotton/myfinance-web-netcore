@{
    ViewData["Title"] = "Relatorio Transações";
}

<h3> Relatório de Transações por Periodo</h3>
<hr>

<div>
 <table class="table">
    <tr>
        <label>Data:</label>
    </tr>
    <tr>
        <th>
            <input type ="date" class="form-control" id ="DataInit" name="dataInit"> 
        </th>
        <th>
            <label>a</label>
        </th>
        <th>
            
            <input type ="date" class="form-control" id ="DataEnd" name="dataEnd"> 
        </th>
        <th>
            <button type="button" class="btn btn-block btn-warning" onclick="RelatorioTransacao()">Filtrar</button>
        </th>
    </tr>
</div>

<hr>    

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Data</th>
        <th>Valor</th>
        <th>Tipo</th>
        <th>Historico</th>
        <th>Id Plano Conta</th>
    </tr>

    @{
        foreach(var item in (List<TransacaoModel>)ViewBag.Lista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Data</td>
                <td>@item.Valor</td>
                <td>@item.Tipo</td>
                <td>@item.Historico</td>
                <td>@item.IdPlanoConta</td>
            </tr>
        }
    }
</table>

<script>
    function RelatorioTransacao()
     {
        var dInit = document.getElementById("DataInit").value;
        var dEnd  = document.getElementById("DataEnd").value;
        
        console.log(dInit);

        window.location.href = "../Transacao/RelatorioTransacao?"+"dataInit="+dInit+"&"+"dataEnd="+dEnd;
    }

</script>